<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update user</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="update-user-container">
        <h2>Update User</h2>
        <form action="/post-update-user" method="post">
            <div>
                <label>First name</label>
                <input type="text" name="firstName" value="<%= dataUser[0].firstName %>">
            </div>
            <div>
                <label>Last name</label>
                <input type="text" name="lastName" value="<%= dataUser[0].lastName %>">
            </div>
            <div>
                <label>Email</label>
                <input type="email" name="email" value="<%= dataUser[0].email %>">
            </div>
            <div>
                <label>Address</label>
                <input type="text" name="address" value="<%= dataUser[0].address %>">
                <input type="text" hidden name="userId" value="<%= dataUser[0].id %>">
            </div>
            <div>
                <button type="submit" class="save-btn">SAVE</button>
            </div>
        </form>
    </div>
</body>

</html>